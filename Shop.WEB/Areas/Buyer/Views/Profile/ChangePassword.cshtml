@model ChangingPasswordViewModel
@{
    ViewBag.Title = "Change password";
}

<div class="row">
    <div class="col-md-12">
        <h1>Change password:</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-antiforgery="true" asp-action="ChangePassword">
            <div class="form-group">
                <div class="validation" asp-validation-summary="All"></div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.OldPassword">Old passwor</label><br />
                <input class="form-control" asp-for="@Model.OldPassword" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewPassword">New password</label><br />
                <input class="form-control" asp-for="@Model.NewPassword" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label><br />
                <input class="form-control" asp-for="@Model.ConfirmPassword" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Change" />
            </div>
        </form>
    </div>
</div>