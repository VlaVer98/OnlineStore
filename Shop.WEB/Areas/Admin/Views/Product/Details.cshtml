@model ProductViewModel
@{
    ViewBag.Title = Model.Title;
}
<div class="row">
    <div class="col-md-12">
        <h1>Details:</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p><b>Title:</b> @Model.Title</p>
        <p><b>Status:</b> @Model.Category.Title</p>
        <p><b>Price:</b> @Model.Price</p>
        <p><b>Status:</b> @Model.Status</p>
        <p>
            <b>Decription:</b><br>
            @Model.Content
        </p>
        <p>
            <b>Image:</b>
            <img src="@Model.Image" alt="Alternate Text" />
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a asp-action="Addimage" asp-controller="Task" asp-route-id="@Model.Id" type="button" class="btn btn-info">Add image</a>
        <a asp-action="Edit" asp-controller="Task" asp-route-id="@Model.Id" type="button" class="btn btn-success">Edit task</a>
        <a asp-action="Delete" asp-controller="Task" asp-route-id="@Model.Id" type="button" class="btn btn-danger">Delete</a>
    </div>
</div>