@model ProductCreateViewModel
@{
    ViewBag.Title = "Edit product";
}

<div class="row">
    <div class="col-md-12">
        <h1>Edit product:</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-antiforgery="true" asp-action="Edit">
            <div class="form-group">
                <div class="validation" asp-validation-summary="All"></div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Title"></label><br />
                <input class="form-control" asp-for="@Model.Title" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Content"></label><br />
                <input type="text" class="form-control" asp-for="@Model.Content" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price"></label><br />
                <input class="form-control" asp-for="@Model.Price" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Status"></label><br />
                <select class="form-control" asp-for="@Model.Status" asp-items="@Html.GetEnumSelectList<Shop.Domain.enums.ProductStatus>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CategoryId">Category</label><br />
                <select class="form-control" asp-for="@Model.CategoryId" asp-items='@new SelectList(Model.AllCategory, "Id", "Title" )'>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update" />
            </div>
        </form>
    </div>
</div>