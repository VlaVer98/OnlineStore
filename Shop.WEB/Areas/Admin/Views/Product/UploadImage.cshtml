@model UploadingImageToProductViewModel
@{
    ViewBag.Title = "Upload Image";
}

<div class="row">
    <div class="col-md-12">
        <h1>Upload Image:</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-antiforgery="true" asp-action="UploadImage" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div class="validation" asp-validation-summary="All"></div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NameImage"></label><br />
                <input class="form-control" asp-for="@Model.NameImage" />
            </div>
            <p>
                <label asp-for="@Model.FormFile">Image:</label><br />
                <input type="file" class="form-control" asp-for="@Model.FormFile" />
            </p>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </form>
    </div>
</div>