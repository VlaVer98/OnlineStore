@model CategoryViewModel
@{
    ViewBag.Title = "Create Category";
}

<div class="row">
    <div class="col-md-12">
        <h1>Create Category:</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-antiforgery="true" asp-action="Create">
            <div class="form-group">
                <div class="validation" asp-validation-summary="All"></div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Title"></label><br />
                <input class="form-control" asp-for="@Model.Title" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description"></label><br />
                <input class="form-control" asp-for="@Model.Description" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Create" />
            </div>
        </form>
    </div>
</div>