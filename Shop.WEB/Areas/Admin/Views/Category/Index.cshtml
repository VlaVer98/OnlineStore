@model IEnumerable<Shop.WEB.Models.ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}
<div class="row">
    <div class="col">
        <a type="button" class="btn btn-primary" asp-action="Create">Create new category</a>
    </div>
</div>
<div class="row mt-1">
    <div class="col-md">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Description</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-info btn-sm mr-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-success btn-sm mr-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>