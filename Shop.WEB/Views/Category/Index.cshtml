@model IEnumerable<Shop.WEB.Models.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}
<div class="row">
    <div class="col-md">
        @if (Model != null && Model.Count() != 0)
        {
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <a asp-controller="Product" asp-action="GetByCategory" asp-route-id="@item.Id" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@item.Title</h5>
                        </div>
                        <small>@item.Description</small>
                    </a>
                }
            </div>
        }
        else
        {
            <h1>Categories not added yet</h1>
        }
    </div>
</div>