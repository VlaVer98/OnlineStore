@model IEnumerable<ProductViewModel>

<div class="card-deck">
    @foreach (var item in Model)
    {
        <div class="card">
            @if (item?.Image?.BinaryData != null)
            {
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image.BinaryData))" class="card-img-top" alt="@item.Image.Name">
            }
            else
            {
                <img src="/img/no-image.jpg" class="card-img-top" alt="no-image">
            }
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Content</p>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">More details</a>
            </div>
        </div>
    }
</div>